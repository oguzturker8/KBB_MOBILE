<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profilMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/profilCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FCFCFC">

        <RelativeLayout
            android:id="@+id/profileRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/profilUst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/profilAdSoyad"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center_horizontal|left"
                        android:paddingLeft="8dp"
                        android:text="Ad Soyad"
                        android:textColor="#3A608E"
                        android:textSize="18sp"
                        app:icon="@drawable/search"
                        app:iconPadding="6dp"
                        app:iconTint="#3E82D6"
                        app:strokeWidth="1dp" />

                    <LinearLayout
                        android:id="@+id/profileAlt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/profilPlaka"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="top|center_vertical"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Plaka"
                            android:textAllCaps="false"
                            android:textColor="#3E82D6"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/profilTelefon"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="top|center_vertical"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Telefon"
                            android:textAllCaps="false"
                            android:textColor="#3E82D6"
                            android:textSize="10sp"
                            app:strokeColor="#3A608E" />

                        <Button
                            android:id="@+id/pofilEposta"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="top|center_vertical"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Mail"
                            android:textAllCaps="false"
                            android:textColor="#3E82D6"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/profilDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:clickable="true"
                    app:srcCompat="@android:drawable/ic_menu_delete" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>